personas_proveedores.id_persona_proveedor=s_p_proveedores.id_persona_proveedor";
else
$condicion_proveedor="and proveedores.id_proveedor=$proveedor";

if($proveedor=='*')     $condicion_proveedor="and clinicas_proveedores.id_clinica_proveedor=proveedores.id_clinica_proveedor";

if($proveedor=='TODOS' )    $condicion_proveedor="";

