sesion();
$fecha = date("Y-m-d");
$mes=date("m");
$fecha = date("l");
if($fecha == "Sunday")
	$fecha = "domingo";
elseif($fecha == "Monday")
	$fecha = "lunes";
elseif($fecha == "Tuesday")
	$fecha = "martes";
elseif($fecha == "Wednesday")
	$fecha = "miercoles";
elseif($fecha == "Thursday")
	$fecha = "jueves";
elseif($fecha == "Friday")
	$fecha = "viernes";
elseif($fecha == "Saturday")
	$fecha = "sabado";

$fecha = $fecha.",".date("d/m/Y");

echo cabecera(sistema);
